CREATE TABLE bhuser (
BHUSERID number generated by default on null as identity,
USERNAME varchar(50) NOT NULL,
USERPASSWORD varchar(50) NOT NULL,
MOTTO varchar(100) DEFAULT NULL,
USEREMAIL varchar(100) NOT NULL,
JOINDATE date DEFAULT NULL
);
select * from BHUSER;

CREATE TABLE bhpost (
POSTID number generated by default on null as identity,
POSTDATE date DEFAULT NULL,
POSTTEXT varchar(141) DEFAULT NULL,
BHUSERID number DEFAULT NULL
);
select * from BHPOST;

insert into bhuser (username, userpassword,motto,useremail,JOINDATE) values ('user 3', 'password','user 3 motto','user3@email.com',sysdate);

update bhuser set joindate=sysdate where bhuserid=1;
update bhuser set useremail = 'user2@domain.com', joindate=sysdate where bhuserid=2;
update bhuser set useremail = 'user3@domain.com', joindate=sysdate where bhuserid=3;
update bhuser set useremail = 'user4@domain.com', joindate=sysdate where bhuserid=4;

insert into bhpost (POSTDATE,POSTTEXT, BHUSERID) values (sysdate, 'post text 1', 1);
insert into bhpost (POSTDATE,POSTTEXT, BHUSERID) values (sysdate, 'post text 2', 2);
insert into bhpost (POSTDATE,POSTTEXT, BHUSERID) values (sysdate, 'post text 3', 3);
insert into bhpost (POSTDATE,POSTTEXT, BHUSERID) values (sysdate, 'post text 1a', 1);


-- how to search for posts that contain text 
select * from bhpost where posttext like '%1%' ;

-- how to determine if the user has a valid password
-- users with both valid userid and password will return 1 others will reurn 0
select count(bhuserid) as CountOfUserID from bhuser where useremail='user3@email.com' and userpassword='password';
